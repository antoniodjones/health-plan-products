# Products & Benefits Platform - Environment Configuration
# Copy this file to .env.local and update with your values

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/products_benefits?schema=public"
DATABASE_USER="postgres"
DATABASE_PASSWORD="postgres"
DATABASE_NAME="products_benefits"

# ============================================================================
# REDIS CACHE
# ============================================================================
REDIS_URL="redis://localhost:6379"

# ============================================================================
# AUTHENTICATION
# ============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"
JWT_SECRET="your-jwt-secret-key-change-this"

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_BASE_URL="http://localhost:3000/api"
API_VERSION="v1"

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_AI_DRIVEN_CREATION="true"
FEATURE_VISUAL_BUILDER="true"
FEATURE_WIZARD_MODE="true"
FEATURE_ANALYTICS="true"
FEATURE_COMPLIANCE_ENGINE="true"

# ============================================================================
# AI / ML SERVICES (for AI-Driven Product Creation)
# ============================================================================
# Google AI (Gemini)
GOOGLE_AI_API_KEY="your-google-ai-api-key"
GOOGLE_AI_MODEL="gemini-pro"

# OpenAI (Alternative)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4"

# ============================================================================
# GCP SERVICES (if deploying to GCP)
# ============================================================================
GCP_PROJECT_ID="your-gcp-project-id"
GCP_REGION="us-central1"
GCP_CLOUD_SQL_CONNECTION_NAME="your-project:region:instance"
GCP_STORAGE_BUCKET="your-bucket-name"

# Cloud Storage (for documents, SBCs, EOCs)
GCS_BUCKET_NAME="products-benefits-documents"
GCS_CREDENTIALS="path/to/service-account-key.json"

# Document AI (for PDF parsing)
DOCUMENT_AI_PROCESSOR_ID="your-processor-id"
DOCUMENT_AI_LOCATION="us"

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================
# CMS (Centers for Medicare & Medicaid Services)
CMS_API_KEY="your-cms-api-key"
CMS_API_URL="https://data.cms.gov/api"

# SERFF (System for Electronic Rate and Form Filing)
SERFF_API_KEY="your-serff-api-key"
SERFF_API_URL="https://filingaccess.serff.com/sfa/home/login"

# Healthcare.gov
HEALTHCARE_GOV_API_KEY="your-healthcare-gov-api-key"
HEALTHCARE_GOV_API_URL="https://data.healthcare.gov/api"

# ============================================================================
# EMAIL / NOTIFICATIONS
# ============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@products-benefits.com"

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn"

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="60000"

# ============================================================================
# FILE UPLOADS
# ============================================================================
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="application/pdf,text/csv,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"

# ============================================================================
# DEVELOPMENT
# ============================================================================
NODE_ENV="development"
DEBUG="false"

